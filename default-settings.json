{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.editor.wordWrap": "on",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.endpoint": "http://localhost:8000/v1",
  "github.copilot.advanced.customEndpoint": "http://localhost:8000/v1",
  "github.copilot.completions.endpoint": "http://localhost:8000/v1",
  "github.copilot.advanced.debug.overrideEngine": "http://localhost:8000/v1",
  "editor.fontSize": 14,
  "editor.fontFamily": "'SF Mono', Consolas, 'Courier New', monospace",
  "editor.lineHeight": 1.5,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditorsVisible": 0,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'SF Mono', Consolas, 'Courier New', monospace",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "json.format.enable": true,
  "yaml.format.enable": true,
  "yaml.validate": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open"
}
